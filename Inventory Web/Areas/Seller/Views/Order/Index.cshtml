@model List<Orders>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <h2 class="text-dark">History Orders</h2>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                     Name
                </th>
                <th>
                    City
                </th>
                <th>
                    Street
                </th>
                <th>Product</th>
                <th>Price</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.City
                        </td>
                        <td>
                            @item.Street
                        </td>
                        <td>
                            @item.Products.title
                        </td>
                        <td>
                            @item.Products.price
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @if(item.Status == "unpaid")
                                {
                                    <a asp-area="Seller" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded mx-2">
                                        <i class="bi bi-check-lg"></i>
                                    </a>                     
                                }
                            </div>
                        </td>
                    </tr>
                }   
            }
        </tbody>
    </table>
</div>