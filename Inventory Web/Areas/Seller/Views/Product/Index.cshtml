@model List<Products>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Product Sellers</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Seller" asp-controller="Product" asp-action="create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div style="width:90px; height:90px">
                                <img src="@item.url" style="width: 100%; height: 100%;" />
                            </div>
                        </td>
                        <td>
                            @item.title
                        </td>
                        <td>
                            @item.Category.Name
                        </td>
                        <td>
                            @item.price
                        </td>
                        <td>
                            @item.stock
                        </td>
                        <td>
                            @item.status
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Seller" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark rounded mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-area="Seller" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark rounded mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }          
        </tbody>
    </table>
</div>