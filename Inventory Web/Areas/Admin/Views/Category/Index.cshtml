@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">All Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="category" asp-action="create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th width="500px">
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Count > 0)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @Model[i].Name
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-dark rounded mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-dark rounded mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>