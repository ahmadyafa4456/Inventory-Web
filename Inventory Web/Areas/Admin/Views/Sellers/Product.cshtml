@model List<Products>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Product Sellers</h2>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div style="width:90px; height:90px">
                            <img src="@item.url" style="width: 100%; height: 100%;" />
                        </div>
                    </td>
                    <td>
                        @item.title
                    </td>
                    <td>
                        @item.Category.Name
                    </td>
                    <td>
                        @item.price
                    </td>
                    <td>
                        @item.stock
                    </td>
                    <td>
                        @item.status
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>